<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<!-- Bean Life Scopes -->
	<!-- SingletonBean -->

	<!-- singleton scope is the default -->
	<bean id="singletonDefault" class="com.main.beanscope.SingletonBean" />
	
	
	<!-- the following is equivalent, though redundant (singleton scope is the default) -->
	<bean id="singletonScope" class="com.main.beanscope.SingletonBean" scope="singleton" />


	<!-- prototype scope -->
	<bean id="prototypeScope" class="com.main.beanscope.PrototypeBean" scope="prototype" />


</beans>